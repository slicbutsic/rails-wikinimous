<div class="d-flex justify-content-center mt-3">
<h1>Add new article: </h1>
</div>

<%= form_with model: @article, class: "mb-3" do |f| %>

  <div class="d-flex justify-content-center mt-3">
    <div class="m-3 w-50" >
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Enter title"%>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <div class="m-3 col-6">
      <%= f.label :content, class: "form-label" %>
      <%= f.text_area :content, class: "form-control", placeholder: "Enter content" %>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-3">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>


<div class="d-flex justify-content-center mt-3">
<%= link_to "Back", index_path, class:"button" %>
</div>

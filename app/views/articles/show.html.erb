<div class="d-flex justify-content-center mt-3">
  <h3>
    <%= link_to edit_article_path, class: 'edit-task-link nounderline' do %>
      <i class="fa-solid fa-pencil"></i>
    <% end %>


    <span class="spacing">
      <%= @article.title %>
    </span>



    <%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <i class="fa-regular fa-trash-can"></i>
    <% end %>
  </h3>
</div>

<div class="d-flex justify-content-center mt-3 m-5 p-5">
  <p> <%= @article.content %> </p>
</div>

<div class="d-flex justify-content-center mt-3">
<%= link_to "Back", index_path, class:"button" %>
</div>
